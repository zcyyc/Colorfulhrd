<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backkk2"
    android:orientation="vertical"
    tools:context="com.myapp.zcy.colorful.Main4Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/backkk2">

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="229dp"
            android:text="@string/将拥曹营"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_num"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="141dp"
            android:layout_marginBottom="-2dp"
            android:text="@string/_00_00"
            android:textColor="#000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/play_music"
            android:layout_width="61dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="14dp"
            android:background="@android:color/transparent"
            android:text="播放"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </RelativeLayout>

    <com.myapp.zcy.colorful.NumberHrdView2
        android:id="@+id/numberhrdview2"
        android:layout_width="match_parent"
        android:layout_height="480dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backkk2">

        <LinearLayout
            android:id="@+id/layout_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:background="@drawable/choose"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="18sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/btn_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:background="@drawable/begin_g"
                android:text=""
                android:textSize="18sp"
                android:textColor="#ffffff"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/btn_restart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:background="@drawable/restart"
                android:text=""
                android:textSize="18sp"
                android:textColor="#ffffff"
                tools:ignore="ButtonStyle" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_btn"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="60dp"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/layout_success"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#637"
            android:visibility="gone">

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
